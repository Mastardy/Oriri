.root {
    flex-grow: 1;
    align-items: center;
    justify-content: center;
    background-color: rgb(38, 38, 38);
}

.title {
    -unity-text-align: upper-center;
    font-size: 1200%;
    -unity-font: url("project://database/Assets/UI/Fonts/Inter-Black.ttf?fileID=12800000&guid=9f268d4c8b46708468c7a831e39c8e7e&type=3#Inter-Black");
    -unity-font-definition: none;
    color: rgb(255, 255, 255);
    margin-bottom: 4%;
    background-color: rgb(0, 0, 20);
    border-radius: 17px;
    width: 30%;
}

.hidden {
    display: none;
}

.buttonBackground {
    align-items: center;
    justify-content: center;
    background-color: rgb(0, 0, 20);
    border-radius: 65px;
    width: 18%;
    height: 11%;
    margin-bottom: 1%;
}

.button {
    font-size: 350%;
    -unity-font: url("project://database/Assets/UI/Fonts/Inter-Black.ttf?fileID=12800000&guid=9f268d4c8b46708468c7a831e39c8e7e&type=3#Inter-Black");
    -unity-font-definition: none;
    -unity-text-align: middle-center;
    width: 92%;
    height: 80%;
    color: rgb(255, 255, 255);
    background-color: rgb(0, 0, 20);
    border-radius: 50px;
    border-width: 6px;
    border-color: rgb(255, 200, 0);
    transition-duration: 0.1s;
}

.button:focus {
    border-color: rgb(255, 216, 80);
    background-color: rgb(26, 26, 38);
    transition-duration: 0.1s;
    transition-property: all;
    transition-timing-function: ease-in;
}

.button:active {
    background-color: rgb(78, 78, 90);
}

.yellowMarker {
    width: 2.25%;
    height: 4%;
    background-color: rgb(255, 200, 0);
    border-radius: 50px;
}

.creditsLabel {
    font-size: 350%;
    -unity-text-align: middle-center;
    margin-bottom: 1%;
    color: rgb(230, 230, 230);
}